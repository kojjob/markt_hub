<%= form_with(model: product) do |form| %>
  <% if product.errors.any? %>
    <div style="color: red">
      <h2><%= pluralize(product.errors.count, "error") %> prohibited this product from being saved:</h2>
      <ul>
        <% product.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>
  <div class="items-center justify-center bg-white rounded-md shadow-md px-20 py-24 md:p-12 w-full sm:w-full lg:w-1/3 lg:max-w-lg lg:mx-auto lg:mt-0 lg:mb-0 lg:flex-row lg:justify-between lg:items-center">
    <div>
      <%= form.label :name, class: " mb-4 block text-sm font-medium text-gray-700" %>
      <%= form.text_field :name, class: "mb-2 block w-full rounded-md border-0 py-1.5 pl-7 pr-20 text-gray-900 ring-1 ring-inset ring-gray-300 placeholder:text-gray-400 focus:ring-2 focus:ring-inset focus:ring-indigo-600 sm:text-sm sm:leading-6" %>
    </div>
    <div>
      <%= form.label :price, class: "mb-4 block text-sm font-medium text-gray-700" %>
      <%= form.text_field :price, class: "mb-4 block w-full rounded-md border-0 py-1.5 pl-7 pr-20 text-gray-900 ring-1 ring-inset ring-gray-300 placeholder:text-gray-400 focus:ring-2 focus:ring-inset focus:ring-indigo-600 sm:text-sm sm:leading-6" %>
    </div> 
    <div>
      <%= form.label :image, class: "block text-sm font-medium text-gray-700" %>
      <%= form.file_field :images, multiple: true, class: "block w-full text-sm text-gray-500 file:mr-4 file:py-2 file:px-4 file:rounded-full file:border-0 file:text-sm file:font-semibold file:bg-blue-50 file:text-blue-700 hover:file:bg-blue-100" %>
    </div>
    <div>
      <%= form.label :description, class: "mb-4 block text-sm font-medium text-gray-700" %>  
      <%= form.text_area :description,  class: "h-40 px-3 text-sm py-1 mt-5 outline-none border-gray-300 w-full resize-none border rounded-lg placeholder:text-sm", placeholder:"Add your comments here" %>
    </div>
    <div>
      <%= form.submit class: "mt-4 w-full inline-flex justify-center py-2 px-4 border border-transparent shadow-sm text-sm font-medium rounded-md text-white bg-indigo-600 hover:bg-indigo-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-indigo-500"%>
    </div class="flex justify-between items-center">
      <p><%= link_to "New product", new_product_path %></p>
      <p><%= link_to "Back", products_path %></p>
  </div>
<% end %>
